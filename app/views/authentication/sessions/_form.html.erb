<%= form_with url: sessions_path do |form| %>
    <div class="row">
        <div class="mb-3 col-md-6">
            <label class="form-label" for="inputEmail4">Login</label>
            <%= form.text_field :login, autofocus: true, class: "form-control", required: "true"%>
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label" for="inputPassword4">Password</label>
            <%= form.password_field :password, id: "user_password",class: "form-control", required: "true" %>
        </div>
    </div>
    <%= form.hidden_field :aprobado, value: true %>

    <div class="float-end">
        <%= form.submit  'Guardar', class: 'btn btn-success' %>
    </div>
<% end %>
